  <body class="d-flex h-100 text-center text-white bg-dark">
    
<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
  <%- include('components/navbar', {active:"add"}); %>

  <main class="px-3">
    <form class="needs-validation" onsubmit="return false" novalidate>
        <div class="mb-3 has-validation">
          <label for="inputName" class="form-label">Device name</label>
          <input type="text" class="form-control" id="inputName" aria-describedby="nameHelp">
          <div id="nameHelp" class="form-text">Device name must be unique for every connected device</div>
          <div id="device_name_error" class="invalid-feedback">
            
          </div>
        </div>
        <div class="mb-3">
          <label for="selectType" class="form-label">Type</label>
          <select class="form-select" id="selectType" aria-label="Default select type">
            <option value="" selected>Select a type</option>
            <option value="ac">Air conditioner</option>
            <option value="heating">Heating</option>
            <option value="curtains">curtains</option>
            <option value="blinds">blinds</option>
            <option value="lights">lights</option>
            <option value="TV">TV</option>
            <option value="audio">Audio System</option>
            <option value="coffee">Coffee maker</option>
            <option value="lock">Door lock</option>
            <option value="outlet">outlet</option>
          </select>
          <div id="device_type_error" class="invalid-feedback">
          </div>
        </div>

        <div class="mb-3">
            <label for="select_on_off" class="form-label">Device status(on / off)</label>
            <select class="form-select" id="select_on_off" aria-label="Default select status">
              <option selected value="on">On</option>
              <option value="off">Off</option>
            </select>
          </div>

          <div class="mb-3">
            <label for="select_lock" class="form-label">Device status(open / locked)</label>
            <select class="form-select" id="select_lock" aria-label="Default select status">
              <option selected value="open">Open</option>
              <option value="locked">Locked</option>
            </select>
          </div>

          <div class="mb-3">
            <label for="select_open_close" class="form-label">Device status(open / closed)</label>
            <select class="form-select" id="select_open_close" aria-label="Default select open/close">
              <option selected value="open">Open</option>
              <option value="closed">Closed</option>
            </select>
          </div>
          
          <div class="mb-3">
            <p class="form-label">Device volume</p>
            <input type="range" min="1" max="100" value="50" class="slider" id="volume">
          </div>

          <div class="mb-3 has-validation">
            <label for="temperature_input" class="form-label">Temperature(degree celcius)</label>
            <input min="16" max="30" value="22" type="number" class="form-control" id="temperature_input">
            <div id="temperature_error" class="invalid-feedback">
              
            </div>
          </div>



        <button type="submit" class="btn btn-primary">Link device</button>
      </form>
  </main>

  <%- include('components/footer'); %>
</div>


    
